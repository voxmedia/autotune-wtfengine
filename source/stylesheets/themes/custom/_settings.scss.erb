// EdProd Framework Settings
// THIS FILE IS FOR VARIABLES ONLY!!
// Look at the _settings.scss file one folder up to see available variables
// USE _overrides.scss FOR CSS RULES
// This file loads before the framework, so most foundation variables are not
// available yet. Overrides loads after the framework.

<% if defined?(primary_color) %>
$primary-color: <%=primaryColor %>;
<% else %>
$primary-color: <%= data.autotune.customColor || data.autotune.primaryColor || '#292929' %>;
<% end %>
<% if defined?(secondary_color) %>
$secondary-color: <%= secondaryColor %>;
<% else %>
$secondary-color: <%= data.autotune.secondaryColor || '#e6e6e6' %>;
<% end %>

$body-font-family: 'Gotham SSm A', 'Gotham SSm B';

$header-font-family: $body-font-family;
$header-font-weight: 700;

$paragraph-font-family: $body-font-family;

$button-font-family: $header-font-family;
$button-bg-color: $secondary-color;
$button-bg-color-hover: darken($button-bg-color, 4%);
